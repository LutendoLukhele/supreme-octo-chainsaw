              },
              "filters": {
                "type": "object",
                "description": "Filters for operation 'fetch_database'.",
                "optional": true,
                "properties": {
                  "conditions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "property": {
