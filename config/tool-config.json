      "providerConfigKey": "salesforce-2",
      "category": "CRM",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": { "type": "string", "enum": ["fetch"], "description": "Operation must be 'fetch'." },
          "entityType": {
            "type": "string",
            "enum": ["Account", "Contact", "Lead", "Deal", "Article", "Case"],
            "description": "The type of Salesforce object to fetch."
          },
          "identifier": {
            "type": "string",
            "description": "Optional: ID or unique value (Name/Email) to fetch a single record. Use 'all' for multiple records.",
            "optional": true
          },
          "filters": {
            "type": "object",
            "description": "Optional: Advanced criteria for filtering records.",
            "optional": true,
            "properties": {
              "conditions": { "type": "array", "items": { "type": "object" }, "description": "List of filter conditions." },
              "logic": { "type": "string", "optional": true, "description": "Logical combination of conditions (e.g., '1 AND 2')." },
              "limit": { "type": "number", "optional": true, "description": "Maximum number of records." }
            }
          }
        },
        "required": ["operation", "entityType"]
      }
    },
    {
      "name": "create_entity",
      "description": "Create a new Salesforce record.",
      "providerConfigKey": "salesforce-2",
      "category": "CRM",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": { "type": "string", "enum": ["create"], "description": "Operation must be 'create'." },
          "entityType": { "type": "string", "enum": ["Account", "Contact", "Lead", "Deal", "Article", "Case"], "description": "Type of Salesforce object to create." },
          "fields": {
            "type": "object",
            "description": "A key-value object of fields for the new record. The required fields depend on the 'entityType'.\n- For a 'Lead', you MUST include 'Company', 'LastName', and 'Status'. Example: { \"Company\": \"Innovate Corp\", \"LastName\": \"Doe\", \"Status\": \"Open - Not Contacted\" }\n- For a 'Contact', you MUST include 'LastName'. Example: { \"LastName\": \"Smith\", \"FirstName\": \"Jane\" }"
          }
        },
        "required": ["operation", "entityType", "fields"]
      }
    },
    {
      "name": "update_entity",
      "description": "Update existing Salesforce record(s).",
      "providerConfigKey": "salesforce-2",
      "category": "CRM",
      "parameters": {
        "type": "object",
        "properties": {
          "operation": { "type": "string", "enum": ["update"], "description": "Operation must be 'update'." },
          "entityType": { "type": "string", "enum": ["Account", "Contact", "Lead", "Deal", "Article", "Case"], "description": "Type of Salesforce object to update." },
          "identifier": { "type": "string", "optional": true, "description": "Optional: ID or unique field value to identify a SINGLE record." },
          "filters": { "type": "object", "optional": true, "description": "Optional: Filters to identify MULTIPLE records." },
          "fields": {
            "type": "object",
            "minProperties": 1,
            "description": "Required: Key-value pairs of fields and their new values."
          }
        },
        "required": ["operation", "entityType", "fields"]
      }
    },
    {
      "name": "create_zoom_meeting",
      "description": "Schedules a new meeting in Zoom. Use this for creating calendar events, appointments, or meetings.",
      "providerConfigKey": "zoom",
      "category": "Calendar",
      "parameters": {
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "description": "The title or topic of the meeting."
          },
          "type": {
            "type": "string",
            "description": "The type of meeting.",
            "enum": ["scheduled", "instant", "recurring", "recurringNoFixed"]
          },
          "start_time": {
            "type": "string",
            "description": "The meeting's start time in ISO 8601 format (e.g., '2025-08-14T10:00:00Z'). Required for 'scheduled' and 'recurring' types."
          },
          "duration": {
            "type": "number",
            "description": "The meeting's duration in minutes."
          },
          "timezone": {
            "type": "string",
            "description": "The timezone for the meeting, e.g., 'Africa/Johannesburg'."
          },
          "agenda": {
            "type": "string",
            "description": "A description or agenda for the meeting."
          },
          "recurrence": {
            "type": "object",
            "description": "Recurrence details for a 'recurring' meeting.",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["daily", "weekly", "monthly"]
              },
              "repeat_interval": { "type": "number" },
              "weekly_days": {
                "type": "string",
                "enum": ["sunday", "monday", "tuesday", "wednesday", "thursday", "friday", "saturday"]
              },
              "end_times": {
                "type": "number",
                "description": "How many times the meeting should recur."
              }
            }
          }
        },
        "required": ["topic", "type"]
      }
    },
