                  }
                }
              },
              "format": {
                "type": "string",
                "enum": ["detailed", "simple", "raw"],
                "description": "Response format. Defaults to 'detailed'.",
                "optional": true,
                "default": "detailed"
              }
            },
            "required": ["operation"]
          }
        },
        "required": ["input"]
      }
    },
